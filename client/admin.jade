template(name='adminRoot')
  +Admin(newAdmin)

template(name='Admin')
  #users
    +UsersList(UsersList)
  #games
    +SessionsList(SessionsList)

template(name='UsersList')
    h3 Users:
    if $eq 0 users.length
      i none
    else
      table
        tr
          th
          th ID
          th Username
          th e-mail
        each users
          tr
            td
              if ../isAdmin
                a.deleteUser(href='#', title='Delete'): span.glyphicon.glyphicon-remove
            td #{_id}
            td #{username}
            td {{../email this}}

template(name='SessionsList')
    h3 Sessions:
    if $eq 0 games.length
      i none
    else
      table
        tr
          th
          th ID
          th Name
          th Moderator
        each games
          tr
            td
              if ../isAdmin
                a.deleteGame(href='#', title='Delete'): span.glyphicon.glyphicon-remove
            td.game
              a(href='#') #{_id}
            td #{name}
            td {{../modEmail this}}
