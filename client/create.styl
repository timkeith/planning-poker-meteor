form#createGame
  input
    margin-bottom: 0
  td
    padding-left: 0
    padding-top: 1em
  td.num
    text-align: right
  td.delete
    padding-bottom: 0
    vertical-align: bottom
    a
      opacity: 0
  tr:hover td.delete a
    display: inline
    color: #808080
    opacity: 1
  td.desc
    text-overflow: ellipsis
    overflow: hidden
    white-space: nowrap
  tr.task
    td
      padding-top: 0
  .error
    color: red
    height: inherit

form.addTask
  display: inline

form#import
  margin-bottom: 0

a#delete, a#add
  color: #808080

